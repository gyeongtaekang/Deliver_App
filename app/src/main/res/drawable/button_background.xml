<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="#9DC3C1"/> <!-- 흰색 배경 -->
            <corners android:radius="4dp"/>  <!-- 둥근 모서리 -->
            <stroke android:width="0.5dp" android:color="#000000"/> <!--버튼 테두리 색-->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- 비활성화시 색상 -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>